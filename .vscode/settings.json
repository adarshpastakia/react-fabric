{
  "search.exclude": {
    "**/coverage": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "css.lint.validProperties": ["@layer", "@global", "@value"],
  "tailwindCSS.experimental.configFile": ".storybook/styles/styles.css",
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    ".*ClassName"
  ],
  "i18n-ally.localesPaths": [
    "packages/core/src/i18n",
    "packages/data/src/i18n",
    "packages/date/src/i18n",
    "packages/form/src/i18n",
    "packages/searchbar/src/i18n",
    "packages/superdate/src/i18n"
  ],
  "i18n-ally.keystyle": "nested"
}
