{
  "name": "@react-fabric/chart",
  "version": "1.0.0-beta.52",
  "description": "RUF: Charting package",
  "author": "Adarsh Pastakia <adarshpastakia@outlook.com>",
  "license": "MIT",
  "repository": "https://github.com/adarshpastakia/react-ui-framework/tree/main/packages/chart",
  "source": "src/index.ts",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "directories": {
    "src": "src",
    "styles": "css",
    "test": "tests"
  },
  "files": [
    "css",
    "src",
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "makelink": "yarn link",
    "removelink": "yarn unlink",
    "prebuild": "rm -rf ./dist",
    "build:dts": "tsc -p ./tsconfig.build.json",
    "build:rollup": "rollup -c ../../rollup.config.mjs",
    "build": "npm-run-all -p build:rollup build:dts",
    "watch:dts": "tsc -w -p ./tsconfig.build.json",
    "watch:rollup": "rollup -w -c ../../rollup.config.mjs",
    "watch": "npm-run-all -p watch:rollup watch:dts"
  },
  "dependencies": {
    "@react-fabric/core": "^1.0.0-beta.52",
    "@react-fabric/utilities": "^1.0.0-beta.52",
    "classnames": "^2.5.1",
    "color": "^4.2.3",
    "date-fns": "^4.0.0",
    "echarts": "^5.6.0",
    "echarts-wordcloud": "^2.1.0"
  },
  "peerDependencies": {
    "i18next": "^25.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.5.2"
  },
  "devDependencies": {
    "@types/echarts": "^4.9.22"
  },
  "engines": {
    "node": ">=18.12.0",
    "npm": ">=8.19.0"
  }
}
